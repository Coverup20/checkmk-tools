# ===== CONFIGURAZIONE YDEA API TOOLKIT =====
# Ottieni credenziali da: https://my.ydea.cloud → Impostazioni → La mia azienda → API

# CREDENZIALI (OBBLIGATORIE) ← MODIFICA QUESTE DUE RIGHE!
export YDEA_ID="ID"
export YDEA_API_KEY="TOKEN"

# CONFIGURAZIONI OPZIONALI (vanno bene così)
export YDEA_BASE_URL="https://my.ydea.cloud/app_api_v2"
export YDEA_LOGIN_PATH="/login"
export YDEA_TOKEN_FILE="${HOME}/.ydea_token.json"
export YDEA_EXPIRY_SKEW=60
export YDEA_DEBUG=0

# SOGLIE MONITORING
export ALERT_THRESHOLD_CPU=90
export ALERT_THRESHOLD_MEM=85
export ALERT_THRESHOLD_DISK=90

# ===== HEALTH MONITORING YDEA =====
# Email per notifiche quando Ydea è irraggiungibile
export YDEA_ALERT_EMAIL="massimo.palazzetti@nethesis.it"

# Numero di fallimenti consecutivi prima di notificare (default: 3)
export YDEA_FAILURE_THRESHOLD=3

# ===== INTEGRAZIONE CHECKMK =====
# Debug per script notifica CheckMK (0=off, 1=on)
export DEBUG_YDEA=0
