#!/bin/bash
# Launcher per eseguire mail_realip remoto dal repo GitHub
# Script notifica CheckMK via email con real_ip

SCRIPT_URL="https://raw.githubusercontent.com/Coverup20/checkmk-tools/main/script-notify-checkmk/mail_realip"

# Esegue lo script Python remoto
python3 <(curl -fsSL "$SCRIPT_URL") "$@"
