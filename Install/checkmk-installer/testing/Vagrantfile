# -*- mode: ruby -*-
# vi: set ft=ruby :

# CheckMK Installer Test Environment
# Vagrant configuration for automated testing

Vagrant.configure("2") do |config|
  # Base box
  config.vm.box = "generic/ubuntu2204"  # Ubuntu 22.04 LTS (better Hyper-V support)
  
  # VM settings - Hyper-V provider
  config.vm.provider "hyperv" do |hv|
    hv.vmname = "checkmk-installer-test"
    hv.memory = 1024
    hv.cpus = 2
    hv.linked_clone = true
  end
  
  # VirtualBox provider (if Hyper-V disabled)
  config.vm.provider "virtualbox" do |vb|
    vb.name = "checkmk-installer-test"
    vb.memory = "2048"
    vb.cpus = 2
    vb.gui = false
  end
  
  # Network
  config.vm.network "private_network", type: "dhcp"
  config.vm.network "forwarded_port", guest: 5000, host: 5000, id: "checkmk"
  config.vm.network "forwarded_port", guest: 22, host: 2222, id: "ssh"
  
  # Sync installer directory (disabled for Hyper-V to avoid SMB auth)
  config.vm.synced_folder ".", "/vagrant", disabled: true
  
  # Provision - install dependencies and clone installer from GitHub
  config.vm.provision "shell", inline: <<-SHELL
    echo "=== Installing dependencies ==="
    apt-get update
    apt-get install -y curl wget git jq
    
    echo "=== Cloning installer from GitHub ==="
    cd /root
    git clone https://github.com/Coverup20/checkmk-tools.git
    cd checkmk-tools/Install/checkmk-installer
    chmod +x *.sh modules/*.sh utils/*.sh testing/*.sh testing/test-scenarios/*.sh
    
    echo "=== VM ready for testing ==="
    echo "Installer location: /root/checkmk-tools/Install/checkmk-installer/"
    echo "Run tests with: cd /root/checkmk-tools/Install/checkmk-installer && sudo ./testing/test-vm.sh"
  SHELL
  
  # Message
  config.vm.post_up_message = <<-MSG
    ╔════════════════════════════════════════════════════════════╗
    ║         CheckMK Installer Test VM Ready                   ║
    ╠════════════════════════════════════════════════════════════╣
    ║  SSH: vagrant ssh                                          ║
    ║  Test: vagrant ssh -c 'cd /root/checkmk-tools/Install/checkmk-installer && sudo ./testing/test-vm.sh' ║
    ║  CheckMK: http://localhost:5000/monitoring/               ║
    ╚════════════════════════════════════════════════════════════╝
  MSG
end
